<div class="container mt-4">
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% if (navigation.currentPage <= 1) { %>
      <li class="page-item"><a class="page-link disabled">Previous</a></li>
      <% } else { %>
      <li class="page-item"><a class="page-link"
          href="<%= `?page=${Math.min(navigation.lastPage, navigation.currentPage-1)}` %>">Previous</a></li>
      <% } %>

      <% const start = Math.max(1, navigation.currentPage - 4); %>
      <% const end = Math.min(navigation.lastPage, navigation.currentPage + 4); %>
      <% for (let i = start; i <= end; i++) { %>
      <% if (i === navigation.currentPage) { %>
      <li class="page-item"><a class="page-link active" href="?page=<%= i %>"><%= i %></a></li>
      <% } else { %>
      <li class="page-item"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
      <% } %>
      <% } %>

      <% if (navigation.currentPage >= navigation.lastPage) { %>
      <li class="page-item"><a class="page-link disabled">Next</a></li>
      <% } else { %>
      <li class="page-item"><a class="page-link" href="<%= `?page=${navigation.currentPage+1}` %>">Next</a></li>
      <% } %>
    </ul>
  </nav>
</div>